{
  "parser": "babel-eslint",
  "extends": [
    "jetbrains",
    "jetbrains/bem",
    "jetbrains/es6",
    "jetbrains/node",
    "jetbrains/react",
    "jetbrains/angular",
    "jetbrains/test"
  ],
  "rules": {
    // Possible Errors
    "valid-jsdoc": 1,

    // Best Practices
    "complexity": [0, 5],
    "consistent-return": 1,
    "no-magic-numbers": [1, { "ignore": [-1, 0, 1] }],

    // Stylistic Issues
    "func-names": 1,

    // Angular
    "angular/directive-name": [2, "rg"]
  }
}
