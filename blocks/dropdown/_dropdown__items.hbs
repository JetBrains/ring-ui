{{#items}}
    {{#this}}
        {{#if separator}}
            {{> dropdown__separator }}
        {{else}}
            {{#if type}}
                <span class="{{> dropdown__class}}" {{> global__attributes}} title="{{this.label}}">
                    <span class="ring-dropdown__item__type">{{type}}</span>
                    <span class="ring-dropdown__item__content">{{> dropdown__content}}</span>
                </span>
            {{else}}
                {{#if url}}
                    <a class="{{> dropdown__class}}" href="{{url}}" {{> global__attributes}} title="{{this.label}}">{{> dropdown__content}}</a>
                {{else}}
                    <span class="{{> dropdown__class}}" {{> global__attributes}} title="{{this.label}}">{{> dropdown__content}}</span>
                {{/if}}
            {{/if}}
        {{/if}}
    {{/this}}
{{/items}}
