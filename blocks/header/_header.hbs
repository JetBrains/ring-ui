<div class="ring-header{{#gradient}} ring-header_gradient{{/gradient}}">
  <span class="ring-header__background"></span>
  <span class="ring-header__spacer"></span>

  {{#if logo.url}}
    <a href="{{logo.url}}" class="ring-header__logo"><img class="ring-header__logo__img" src="{{logo.src}}"/></a>
  {{else}}
    <span class="ring-header__logo"><img class="ring-header__logo__img" src="{{logo.src}}"/></span>
  {{/if}}

  {{#items}}
    {{> header__item}}
  {{/items}}

  <div class="ring-header__right">
      <span class="ring-header__spacer"></span>

      <span class="ring-header__item ring-header__search">
          <input class="ring-header__search__input" /><span class="ring-header__search__glass font-icon font-icon_search"></span>
      </span>
      <a href="#" class="ring-header__item ring-header__item_link font-icon font-icon_cog"></a>
      <a href="#" class="ring-header__item ring-header__item_link font-icon font-icon_help"></a>
  </div>
</div>

