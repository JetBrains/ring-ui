<div class="ring-menu{{#ifEqual type 'gradient'}} ring-menu_gradient{{/ifEqual}}{{#ifEqual type 'noborder'}} ring-menu_noborder{{/ifEqual}}">
  <span class="ring-menu__background"></span>

  <div class="ring-menu__i{{> global__class}}">
    {{#if left}}
      <span class="ring-menu__spacer"></span>
      {{#left}}
        {{> menu__item}}
      {{/left}}
    {{/if}}

    <div class="ring-menu__right">
        <span class="ring-menu__spacer"></span>
        {{#right}}
          {{> menu__item}}
        {{/right}}
    </div>
  </div>
</div>