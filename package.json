{
  "name": "ring-ui",
  "version": "3.0.0",
  "description": "JetBrains UI library",
  "config": {
    "clientId": "81a0bffb-6d0f-4a38-b93a-0a4d1e567698",
    "development": {
      "port": 9999,
      "host": "0.0.0.0",
      "hub": "***REMOVED***"
    },
    "production": {
      "host": "ring-ui.github.io",
      "hub": "https://hub.jetbrains.com"
    },
    "components": "./components/"
  },
  "files": [
    "components/**/*.{js,css,scss,gif,html,svg}",
    "postcss.config.js",
    "webpack.config.js"
  ],
  "main": "webpack.config.js",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "component:ng": "yo ring-ui:ng --path $npm_package_config_components",
    "component:react": "yo ring-ui:react --path $npm_package_config_components",
    "component:es6": "yo ring-ui:es6 --path $npm_package_config_components",
    "test": "karma start",
    "gemini-test": "gemini test components/**/*.gemini.js --reporter html --reporter flat",
    "gemini-test-ci": "forever start .serve-static.json && npm run gemini-test -- --teamcity; forever stop serve-static",
    "gemini-gather": "gemini update",
    "build": "webpack --config webpack-docs.config.js",
    "start": "node --max_old_space_size=2000 ./node_modules/.bin/webpack-dev-server --config webpack-docs.config.js --env.server",
    "lint": "eslint . && npm run stylelint",
    "prelint-ci": "echo \"##teamcity[importData type='jslint' path='eslint-report.xml']\"",
    "lint-ci": "eslint --format jslint-xml . > eslint-report.xml && npm run stylelint",
    "stylelint": "stylelint --ignore-path .gitignore '**/*.css'",
    "flow": "flow",
    "test-ci": "karma start karma-ci.conf.js",
    "test-ci-dev": "karma start karma-ci-dev.conf.js",
    "test-watch": "karma start karma-watch.conf.js",
    "prebuild-ci": "npm run lint-ci && npm run test-ci",
    "prebuild-ci-dev": "npm run lint-ci && npm run test-ci-dev",
    "build-ci": "npm run build -- --env.production && npm run gemini-test-ci",
    "build-ci-dev": "npm run build -- --env.production",
    "prerelease-ci": "npm run build-ci && npm pack",
    "prerelease-ci-dev": "npm run build-ci-dev && npm pack",
    "release-ci": "npm publish ring-ui-*.tgz",
    "release-ci-dev": "npm publish --tag dev ring-ui-*.tgz",
    "version": "update-version --patch"
  },
  "repository": {
    "type": "git",
    "url": "ssh://github.com/JetBrains/ring-ui.git"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "readmeFilename": "README.md",
  "babel": {
    "presets": "jetbrains",
    "plugins": [
      "transform-runtime",
      [
        "@maxmaximov/babel-plugin-angular-annotate",
        [
          "angular",
          "ngRoute"
        ]
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "istanbul",
            {
              "exclude": [
                "**/*.test.js"
              ]
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "@jetbrains/stylelint-config": "1.0.11",
    "angular": "1.6.3",
    "angular-mocks": "1.6.3",
    "angular-route": "1.6.3",
    "babel-cli": "6.14.0",
    "babel-eslint": "7.1.1",
    "babel-plugin-istanbul": "3.1.2",
    "babel-polyfill": "6.13.0",
    "chai": "4.0.2",
    "chai-as-promised": "7.0.0",
    "chai-dom": "1.5.0",
    "chai-enzyme": "0.7.1",
    "css-module-flow": "^1.0.0",
    "deep-assign": "2.0.0",
    "docpack": "1.0.2",
    "docpack-examples-compiler": "0.0.3",
    "docpack-jsdoc-extractor": "0.0.6",
    "docpack-markdown-extractor": "0.0.2",
    "docpack-page-generator": "0.0.6",
    "electron": "1.6.2",
    "enzyme": "2.8.2",
    "eslint": "3.11.1",
    "eslint-config-jetbrains": "2.0.41",
    "eslint-plugin-flowtype-errors": "^3.3.0",
    "exports-loader": "0.6.3",
    "extract-loader": "0.1.0",
    "flow-bin": "0.44.2",
    "forever": "0.15.3",
    "front-matter": "2.1.2",
    "gemini": "4.18.1",
    "gemini-teamcity": "2.1.3",
    "generator-ring-ui": "1.0.39",
    "glob": "7.0.6",
    "http-server": "0.9.0",
    "husky": "0.13.4",
    "json-loader": "0.5.4",
    "karma": "1.3.0",
    "karma-coverage": "1.1.1",
    "karma-coverage-html-index-reporter": "1.0.2",
    "karma-electron-launcher": "0.2.0",
    "karma-mocha": "1.1.1",
    "karma-osx-reporter": "0.2.1",
    "karma-sourcemap-loader": "0.3.7",
    "karma-teamcity-reporter": "1.0.0",
    "karma-webdriver-launcher": "1.0.4",
    "karma-webpack": "2.0.1",
    "lint-staged": "4.0.0",
    "mocha": "3.0.2",
    "react-test-renderer": "15.6.1",
    "sinon": "2.3.5",
    "sinon-chai": "2.11.0",
    "storage-mock": "1.0.3",
    "stylelint": "7.11.1",
    "update-version": "1.0.1",
    "wallaby-webpack": "0.0.38",
    "webpack": "2.2.0",
    "webpack-dev-server": "2.2.0",
    "webpack-dll-bundles-plugin": "1.0.0-beta.5",
    "yo": "1.8.5"
  },
  "dependencies": {
    "@hypnosphi/react-portal": "3.1.0",
    "@maxmaximov/babel-plugin-angular-annotate": "2.0.2",
    "angular-elastic": "2.5.1-jb",
    "autoprefixer": "6.4.1",
    "babel-core": "6.24.1",
    "babel-loader": "6.4.1",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-jetbrains": "1.0.13",
    "babel-runtime": "6.6.1-jb",
    "classnames": "2.2.5",
    "combokeys": "2.4.6",
    "compile-code-loader": "0.2.0",
    "core-js": "2.4.1",
    "css-loader": "0.25.0",
    "dom4": "1.8.3",
    "element-resize-detector": "1.1.11",
    "es6-error": "^4.0.2",
    "extricate-loader": "^1.0.0",
    "file-loader": "0.9.0",
    "highlight.js": "9.6.0",
    "html-loader": "0.4.4",
    "imports-loader": "0.6.5",
    "interpolate-loader": "^1.0.0",
    "jetbrains-icons": "1.0.38",
    "jetbrains-logos": "1.1.51",
    "moment": "2.15.2",
