{
  "name": "ring-ui",
  "version": "0.1.0",
  "description": "JetBrains UI library",
  "author": "JetBrains",
  "license": "Apache-2.0",
  "files": [
    "components/**/*.{js,css,scss,gif,html,svg}",
    "postcss.config.js",
    "webpack.config.js",
    "docs"
  ],
  "main": "webpack.config.js",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix --ignore-path .eslintignore",
      "git add"
    ]
  },
  "scripts": {
    "postinstall": "npm rebuild node-sass",
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "component:ng": "yo ring-ui:ng --path $npm_package_config_components",
    "component:react": "yo ring-ui:react --path $npm_package_config_components",
    "component:es6": "yo ring-ui:es6 --path $npm_package_config_components",
    "test": "karma start",
    "gemini-test": "gemini test components/**/*.gemini.js --reporter html --reporter flat",
    "gemini-test-ci": "forever start .serve-static.json && npm run gemini-test -- --teamcity; forever stop serve-static",
    "gemini-gather": "gemini update",
    "build": "lerna run --scope ring-ui-docs --stream build",
    "build-prod": "lerna run --scope ring-ui-docs --stream build-prod",
    "start": "lerna run --scope ring-ui-docs --stream start",
    "lint": "eslint . ; npm run stylelint",
    "prelint-ci": "echo \"##teamcity[importData type='jslint' path='eslint-report.xml']\"",
    "lint-ci": "eslint --format jslint-xml . > eslint-report.xml; npm run stylelint-ci",
    "stylelint-ci": "stylelint --ignore-path .eslintignore --custom-formatter './jslint-xml.js' '**/*.css' | xmlappend eslint-report.xml",
    "stylelint": "stylelint --ignore-path .eslintignore '**/*.css'",
    "flow": "flow",
    "test-ci": "karma start karma-ci.conf.js",
    "test-ci-dev": "xvfb-run karma start karma-ci-dev.conf.js",
    "test-watch": "karma start karma-watch.conf.js",
    "prebuild-ci": "npm run lint-ci && npm run test-ci",
    "prebuild-ci-dev": "npm run lint-ci && npm run test-ci-dev",
    "build-ci": "npm run build-prod && npm run gemini-test-ci",
    "build-ci-dev": "npm run build-prod",
    "prerelease-ci": "npm run build-ci && npm pack",
    "prerelease-ci-dev": "npm run build-ci-dev && npm pack",
    "release-ci": "npm publish ring-ui-*.tgz",
    "release-ci-dev": "npm publish --tag dev ring-ui-*.tgz",
    "version": "update-version --patch"
  },
  "repository": {
    "type": "git",
    "url": "ssh://github.com/JetBrains/ring-ui.git"
  },
  "readmeFilename": "README.md",
  "babel": {
    "presets": "@jetbrains/jetbrains",
    "plugins": [
      [
        "transform-runtime",
        {
          "moduleName": "@princed/babel-runtime"
        }
      ],
      [
        "@maxmaximov/babel-plugin-angular-annotate",
        [
          "angular",
          "ngRoute"
        ]
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          [
            "istanbul",
            {
              "exclude": [
                "**/*.test.js"
              ]
            }
          ]
        ]
      }
    }
  },
  "devDependencies": {
    "@jetbrains/eslint-config": "^2.0.0",
    "@jetbrains/stylelint-config": "^1.2.1",
    "angular": "1.6.5",
    "angular-mocks": "1.6.5",
    "angular-route": "1.6.5",
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-istanbul": "3.1.2",
    "babel-polyfill": "6.13.0",
    "chai": "4.1.0",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "1.5.0",
    "chai-enzyme": "0.8.0",
    "css-module-flow": "^1.0.0",
    "deep-assign": "2.0.0",
    "docpack": "1.0.2",
    "docpack-examples-compiler": "0.0.3",
    "docpack-jsdoc-extractor": "0.0.6",
    "docpack-markdown-extractor": "0.0.2",
    "docpack-page-generator": "0.0.6",
    "electron": "1.6.11",
    "enzyme": "2.9.1",
    "eslint": "^4.2.0",
    "eslint-plugin-flowtype-errors": "^3.3.0",
    "exports-loader": "0.6.4",
    "extract-loader": "0.1.0",
    "flow-bin": "0.44.2",
    "forever": "0.15.3",
    "front-matter": "2.1.2",
    "gemini": "4.18.1",
    "gemini-teamcity": "2.1.3",
    "gen-idea-libs": "1.0.2",
    "generator-ring-ui": "^1.0.0",
    "glob": "7.1.2",
    "http-server": "0.10.0",
    "husky": "0.14.3",
    "iframe-resizer": "3.5.14",
    "json-loader": "0.5.7",
    "karma": "1.7.0",
    "karma-coverage": "1.1.1",
    "karma-coverage-html-index-reporter": "1.0.2",
    "karma-electron-launcher": "0.2.0",
    "karma-mocha": "1.3.0",
    "karma-osx-reporter": "0.2.1",
    "karma-sourcemap-loader": "0.3.7",
    "karma-teamcity-reporter": "1.0.0",
    "karma-webdriver-launcher": "1.0.5",
    "karma-webpack": "2.0.4",
    "lerna": "2.0.0",
    "lint-staged": "4.0.2",
    "mocha": "3.4.2",
    "react-test-renderer": "15.6.1",
    "sinon": "2.3.8",
    "sinon-chai": "2.12.0",
    "storage-mock": "1.0.3",
    "stylelint": "8.0.0",
    "update-version": "1.0.2",
    "wallaby-webpack": "0.0.38",
    "webpack": "2.7.0",
    "webpack-dev-server": "2.6.1",
    "webpack-dll-bundles-plugin": "1.0.0-beta.5",
    "xmlappend": "1.0.4",
    "yo": "2.0.0"
  },
  "dependencies": {
    "@hypnosphi/react-portal": "3.1.0",
    "@jetbrains/babel-preset-jetbrains": "1.0.1",
    "@jetbrains/icons": "1.0.4",
    "@jetbrains/logos": "0.1.0",
    "@maxmaximov/angular-elastic": "2.5.1",
    "@maxmaximov/babel-plugin-angular-annotate": "2.0.3",
    "@princed/babel-runtime": "6.23.0",
    "autoprefixer": "7.1.2",
    "babel-core": "6.25.0",
    "babel-loader": "6.4.1",
    "babel-plugin-transform-runtime": "6.15.0",
    "classnames": "2.2.5",
    "combokeys": "2.4.6",
    "compile-code-loader": "0.2.0",
    "core-js": "2.4.1",
    "css-loader": "0.28.4",
    "dom4": "1.8.5",
    "element-resize-detector": "1.1.12",
    "es6-error": "^4.0.2",
    "extricate-loader": "^1.0.0",
    "file-loader": "0.11.2",
    "highlight.js": "9.12.0",
    "html-loader": "0.4.5",
    "imports-loader": "0.7.1",
    "interpolate-loader": "^1.0.0",
    "moment": "2.18.1",
    "mout": "1.0.0",
    "node-sass": "4.5.3",
    "postcss": "6.0.8",
    "postcss-cssnext": "2.8.0",
    "postcss-loader": "1.3.3",
    "postcss-modules-values-replace": "1.0.0",
    "prop-types": "15.5.10",
    "react": "15.6.1",
    "react-dom": "15.6.1",
    "react-markdown": "2.5.0",
    "react-sortable-hoc": "0.6.5",
    "react-virtualized": "9.9.0",
    "react-waypoint": "7.0.4",
    "sass-loader": "6.0.6",
    "scrollbar-width": "3.1.1",
    "simply-uuid": "1.0.1",
    "sniffr": "1.1.4",
    "style-loader": "0.18.2",
    "svg-sprite-loader": "3.0.8",
    "url-loader": "0.5.9"
  }
}
