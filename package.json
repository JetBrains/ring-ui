    "react-waypoint": "6.0.0",
    "sass-loader": "6.0.0",
    "scrollbar-width": "3.1.1",
    "simply-uuid": "1.0.1",
    "sniffr": "1.1.4",
    "style-loader": "0.13.1",
    "svg-sprite-loader": "0.3.1",
    "url-loader": "0.5.7",
    "whatwg-fetch": "1.0.0"
  }
}
