{
  "version": "1.0.0",
  "private": true,
  "config": {
    "components": "./src/components",
    "dist": "./dist"
  },
  "scripts": {
    "create-component": "yo @jetbrains/ring-ui:react --path $npm_package_config_components",
    "build": "webpack --mode=production --devtool sourcemap",
    "test": "karma start",
    "lint": "eslint . && npm run stylelint",
    "stylelint": "stylelint --ignore-path .gitignore **/*.css",
    "ci-test": "npm run lint && xvfb-maybe karma start",
    "start": "webpack-dev-server -d --history-api-fallback --inline --hot --colors --port <%= port %>"
  },
  "babel": {
    "presets": [
      [
        "@jetbrains/jetbrains",
        {
          "useBuiltIns": "usage"
        }
      ]
    ]
  },
  "dependencies": {
    "@babel/core": "^7.13.10",
    "@jetbrains/babel-preset-jetbrains": "^2.2.3",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^5.1.2",
    "html-webpack-plugin": "^4.5.2",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.2.0",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "redbox-react": "^1.6.0",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "devDependencies": {
    "@jetbrains/eslint-config": "^5.3.1",
    "@jetbrains/stylelint-config": "^2.0.1",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-dom": "^1.9.0",
    "chai-enzyme": "1.0.0-beta.1",
    "electron": "^11.3.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "eslint": "^7.22.0",
    "eslint-plugin-bdd": "^2.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "karma": "^6.2.0",
    "karma-chai-plugins": "^0.9.0",
    "karma-electron": "^6.3.3",
    "karma-mocha": "^2.0.1",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-teamcity-reporter": "^1.1.0",
    "karma-webpack": "^5.0.0",
    "mocha": "^8.3.2",
    "react-test-renderer": "^17.0.1",
    "sinon": "^9.2.4",
    "sinon-chai": "^3.5.0",
    "stylelint": "^13.12.0",
    "xvfb-maybe": "^0.2.1",
    "yo": "^3.1.1"
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
