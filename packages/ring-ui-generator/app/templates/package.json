{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "private": true,
  "src": "./src",
  "dist": "./dist",
  "scripts": {
    "build": "webpack -p --devtool sourcemap",
    "test": "node ./node_modules/karma/bin/karma start",
    "ci-test": "node ./node_modules/karma/bin/karma start --teamcity",
    <% if (useAngular) { %>
    "i18nExtract": "mkdir -p pot && angular-gettext-cli --files './src/blocks/**/*.+(js|html)' --dest ./pot/default.pot --marker-name i18n",
    <% } %>
    "start": "webpack-dev-server -d --history-api-fallback --inline --progress --colors --port 9000  --content-base ./dist"
  },
  "publishConfig": {
    "registry": "http://registry.npmjs.org"
  },
  "dependencies": {
    <% if (useAngular) { %>
    "angular": "1.3.14",
    "angular-gettext": "2.0.1",
    "angular-resource": "1.3.14",
    "angular-route": "1.3.14",
    <% } %>
    "babel": "4.7.8",
    "babel-core": "4.7.8",
    "babel-loader": "4.1.0",
    "babel-runtime": "4.7.8",
    "es5-shim": "^4.0.5",
    "html-webpack-plugin": "^1.1.0",
    "jquery": "~2",
    <% if (useReact) { %>
    "react": "0.11.2",
    <% } %>
    "ring-ui": "2.1.0-1911",
    "webpack-config-merger": "0.0.3"
  },
  "devDependencies": {
    <% if (useAngular) { %>
    "angular-gettext-cli": "1.0.3",
    "angular-mocks": "1.3.14",
    <% } %>
    "karma": "~0.12.31",
    "karma-jasmine": "~0.2.0",
    "karma-phantomjs-launcher": "~0.1.4",
    "karma-sourcemap-loader": "0.3.4",
    "karma-teamcity-reporter": "^0.1.2",
    "karma-webpack": "1.5.0",
    "minimist": "^1.1.0",
    "webpack": "1.7.3",
    "webpack-dev-server": "^1.7.0"
  },
  "engines": {
    "node": ">=0.8.0"
  }
}
