{
  "name": "<%= projectName %>",
  "version": "0.0.1",
  "private": true,
  "config": {
    "src": "./src",
    "dist": "./dist",
    "eslint-ext": ".js,.jsx"
  },
  "scripts": {
    "build": "webpack -p --devtool sourcemap",
    "test": "node ./node_modules/karma/bin/karma start",
    "lint": "eslint --ext $npm_package_config_eslint_ext .",
    "ci-test": "node ./node_modules/karma/bin/karma start --teamcity",
    <% if (useAngular) { %>
    "i18nExtract": "mkdir -p pot && angular-gettext-cli --files './src/blocks/**/*.+(js|html)' --dest ./pot/default.pot --marker-name i18n",
    <% } %>
    "start": "webpack-dev-server -d --history-api-fallback --inline --progress --colors --port 9000  --content-base ./dist"
  },
  "dependencies": {
    <% if (useAngular) { %>
    "angular": "1.3.14",
    "angular-gettext": "2.0.1",
    "angular-resource": "1.3.14",
    "angular-route": "1.3.14",
    <% } %>
    "babel": "4.7.8",
    "babel-core": "4.7.8",
    "babel-loader": "4.1.0",
    "babel-runtime": "4.7.8",
    "es5-shim": "^4.0.5",
    "html-webpack-plugin": "^1.1.0",
    "jquery": "~2",
    <% if (useReact) { %>
    "react": "0.11.2",
    <% } %>
    "ring-ui": "2.1.0-1911",
    "webpack-config-merger": "0.0.3"
  },
  "devDependencies": {
    <% if (useAngular) { %>
    "angular-gettext-cli": "1.0.3",
    "angular-mocks": "1.3.14",
    <% } %>
    "eslint": "0.18.0",
    <% if (useAngular) { %>
    "eslint-plugin-angular": "0.0.6",
    <% } %>
    "eslint-plugin-filenames": "0.1.0",
    "eslint-plugin-google-camelcase": "0.0.1",
    "eslint-plugin-mocha": "0.2.2",
    "eslint-plugin-one-variable-per-var": "0.0.3",
    <% if (useReact) { %>
    "eslint-plugin-react": "1.6.0",
    <% } %>
    "karma": "~0.12.31",
    "karma-chai-plugins": "0.4.0",
    "karma-mocha": "0.1.10",
    "karma-phantomjs-launcher": "~0.1.4",
    "karma-sourcemap-loader": "0.3.4",
    "karma-teamcity-reporter": "^0.1.2",
    "karma-webpack": "1.5.0",
    "mocha": "2.1.0",
    "minimist": "^1.1.0",
    "webpack": "1.7.3",
    "webpack-dev-server": "^1.7.0"
  },
  "engines": {
    "node": ">=0.8.0"
  }
}
