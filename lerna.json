{
  "packages": [
    "components/*",
    "packages/*",
    "."
  ],
  "npmClient": "yarn",
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--force", "--check-files"]
    },
    "init": {
      "exact": true
    },
    "publish": {
      "ignoreChanges": [
        "@ring-ui/hermione"
      ]
    }
  }
}
